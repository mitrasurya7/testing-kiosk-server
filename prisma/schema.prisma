generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialActions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  username   String    @unique @db.VarChar(100)
  email      String    @unique @db.VarChar(100)
  password   String    @db.VarChar(100)
  role       String    @db.VarChar(100)
  token      String?   @db.Uuid
  location   Location? @relation(fields: [locationId], references: [id], onDelete: Cascade)
  locationId Int
  contents   Content[]
  updatedAt  DateTime  @default(now()) @updatedAt
  createdAt  DateTime  @default(now())

  @@map("users")
}

model Location {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(100)
  parentId  Int?
  users     User[]
  devices   Device[]
  updatedAt DateTime @default(now()) @updatedAt
  createdAt DateTime @default(now())

  @@map("locations")
}

model Device {
  id              String    @id @unique @db.VarChar(100)
  name            String    @db.VarChar(100)
  status          Boolean   @default(false)
  lastOnline      DateTime?
  lastOffline     DateTime?
  instalationDate DateTime  @default(now())
  usedLayout      Int       @default(1)
  location        Location? @relation(fields: [locationId], references: [id], onDelete: SetNull)
  locationId      Int?
  layouts         Layout[]
  updatedAt       DateTime  @default(now()) @updatedAt
  createdAt       DateTime  @default(now())

  @@map("devices")
}

model Template {
  id            Int      @id @default(autoincrement())
  name          String   @db.VarChar(100)
  htmlCode      String   @db.Text
  coverImage    String   @db.VarChar(100)
  totalContents String   @db.VarChar(100)
  layouts       Layout[]
  updatedAt     DateTime @default(now()) @updatedAt
  createdAt     DateTime @default(now())

  @@map("templates")
}

model Layout {
  id         Int       @id @default(autoincrement())
  status     Boolean   @default(false)
  contentIds Int[]
  Template   Template? @relation(fields: [templateId], references: [id])
  templateId Int?
  Device     Device?   @relation(fields: [deviceId], references: [id])
  deviceId   String?   @db.VarChar(100)
  updatedAt  DateTime  @default(now()) @updatedAt
  createdAt  DateTime  @default(now())

  @@map("layouts")
}

model Content {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(100)
  url       String   @db.VarChar(100)
  type      String   @db.VarChar(100)
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int?
  updatedAt DateTime @default(now()) @updatedAt
  createdAt DateTime @default(now())

  @@map("contents")
}
